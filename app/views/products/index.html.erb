<h1>Grande banner vai ficar aqui</h1>

<div class='row'>
<h2 class='text-center'>Comprar produtos</h2>
  <% @products.shuffle.each do |product| %>
  <div class='col-sm-3'>
    <div class="card my-3" style="width: 18rem;">
        <%= image_tag 'product_placeholder.jpg',
                      alt: "#{product.name} vendido por #{product.user.first_name}",
                      class: 'card-img-top' %>
        <div class="p-3">
          <h5 class='card-title'><%= product.name %></h5>
          <p class='card-text' style='font-size: 12px'>na categoria <%= product.category %></p>
          <p class='card-text'><%= number_to_currency product.price, unit: 'R$ ', precision: 2 %></p>
          <p class='card-text'>Anunciado por: <%= product.user.first_name %></p>
        </div>
        <%= link_to product_path(product), class: 'btn btn-primary' do %>
          <%= icon('fa-solid', 'magnifying-glass')%> Ver produto
        <% end %>
    </div>
  </div>
  <% end %>
</div>
